<Window x:Class="Letterfrequenties.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Letterfrequenties"
        mc:Ignorable="d"
        Title="Letterfrequenties"
        Height="600" Width="800">

    <Grid Margin="4">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <TextBox x:Name="TextBox_Input"  Grid.Column="0" TextWrapping="Wrap" Margin="4" KeyDown="TextBox_Input_KeyDown" ToolTip="Press enter to start the count" />
        <TextBox x:Name="TextBox_Output" Grid.Column="1" TextWrapping="Wrap" Margin="4" IsReadOnly="True" ToolTip="Characters with accents are counted as accentless counterpart" />

    </Grid>

</Window>
